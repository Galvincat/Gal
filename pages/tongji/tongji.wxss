.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    font-size: 16px;
    color: #333;
  }
  
  .input-panel {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
  }
  
  .input {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
    word-break: break-all;

  }


  
  .input-text {
    width: 47vh;
    height: 300rpx;
    border: 1px gray solid;
    outline: none;
    resize: none;
    border-radius: 10px;
    color: rgb(24, 63, 194);
    font-size: 30rpx;
    line-height: 36rpx;
    margin-bottom: 1vh;
    background-color: rgb(231, 222, 222);
  }
  .input-text1 {
    width: 35vh;
    height: 300rpx;
    border: 1px gray solid;
    outline: none;
    resize: none;
    color: rgb(24, 63, 194);
    font-size: 30rpx;
    line-height: 36rpx;
    margin-bottom: 1vh;
    background-color: rgb(231, 222, 222);
    margin-left: 30vh;
    border-radius: 10px;
  }
  .input input {
    width: 330px;
    padding: 10px;
    border: none;
    border-radius: 5px;
    background-color: #f5f5f5;
    word-break:break-all
  }
  
  .button {
    width: 100px;
    padding: 10px;
    border: none;
    border-radius: 5px;
    background-color: #007aff;
    color: #fff;
  }
  
  .result-panel {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-left: -50vw;
  }
  
  .result-item {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
  }
  
  .result-item text:first-child {
    width: 80px;
  }
  
  .result-item text:last-child {
    margin-left: 10px;
  }