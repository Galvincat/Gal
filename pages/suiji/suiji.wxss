/*index.wxss*/
.container {
    padding: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .input-group {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
  }
  
  .input {
    flex: 1;
    height: 30px;
    border: 1px solid #ccc;
    padding: 0 10px;
    border-radius: 4px;
  }
  
  .btn {
    display: block;
    width: 100%;
    height: 40px;
    line-height: 25px;
    text-align: center;
    background-color: #009688;
    color: #fff;
    border-radius: 4px;
    font-size: 20px;
    font-family: 宋体;
  }
  
  .result {
    margin-top: 20px;
  }
  
  .result text {
    font-size: 16px;
    margin-right: 4px;
  }