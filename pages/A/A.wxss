    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  
  .input {
    width: 40vw;
    height: 50rpx;
    border: 1px solid rgb(14, 5, 5);
    border-radius: 5rpx;
    margin-top: 50rpx;
    margin-bottom: 40rpx;
    padding: 10rpx;
    color: rgb(235, 119, 11);
  }
  
