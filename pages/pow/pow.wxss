.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 80vh;
  }
  
  .input-wrapper {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-bottom: 20px;
  }
  
  .input-label {
    font-size: 16px;
    margin-right: 10px;
  }
  
  .input {
    width: 100px;
    padding: 6px;
    font-size: 16px;
    border-radius: 3px;
    border: 1px solid #ccc;
    margin-top: 1vh;
  }
  
  .btn {
    background-color: #ffc107;
    padding: 10px 20px;
    border-radius: 3px;
    font-size: 16px;
    color: #fff;
  }